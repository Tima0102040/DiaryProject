@model Project.Models.Teacher
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Delete teacher @Html.DisplayFor(model => model.TeacherFullName)</h3>
<div>
    <h4>Customers</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeacherFullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherLogin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeacherEmail)
        </dt>
        
    </dl>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this user?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TeacherId" />
                        <input type="submit" value="Delete" class="btn btn-danger" asp-for="TeacherId" /> 
                    
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Delete
        </button>

   <button type="button" class="btn btn-link" style="float: right"><a asp-action="Index">Back to List</a></button>

</div>